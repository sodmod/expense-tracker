<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.badmus.smartexpensetrancker.controller.ExpenseTrackerController"
      spacing="10" alignment="TOP_CENTER" style="-fx-background-color: whitesmoke; -fx-padding: 20;"
      stylesheets="@style.css">

    <!-- Top Label: Smart Expense Tracker -->
    <Label text="Smart Expense Tracker" style="-fx-font-size: 24px; -fx-font-weight: bold;"
           alignment="CENTER" VBox.vgrow="NEVER"/>

    <!-- Spacer to push buttons to the center -->
    <Pane VBox.vgrow="ALWAYS"/>

    <!-- Centered Buttons -->
    <HBox alignment="CENTER" spacing="10">
        <Button text="Add New Expense" onAction="#handleAddExpenseView"
                styleClass="button"/>
        <Button text="View Expense Summary" onAction="#handleSummaryAction"
                styleClass="button"/>
    </HBox>

    <HBox alignment="CENTER" spacing="10">
        <Button text="Search &amp; Filter Expenses" onAction="#handleSearchView"
                styleClass="button"/>
        <Button text="Generate Report" onAction="#handleGenerateReport"
                styleClass="button"/>
    </HBox>

    <!-- Spacer to push footer label to the bottom -->
    <Pane VBox.vgrow="ALWAYS"/>

    <!-- Footer Label: © 2024 Sodiq Olusola Badmus -->
    <Label text="© 2024 Sodiq Olusola Badmus" style="-fx-font-size: 12px;" alignment="CENTER" VBox.vgrow="NEVER"/>

</VBox>
